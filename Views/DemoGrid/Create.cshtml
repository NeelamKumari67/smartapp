@model CrudAppliction.Models.CustomerTB
@{
    ViewData["Title"] = "Create";
}
<style>
    body {
        background-color: skyblue;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h1 class=" text-success text-center">Add Employee Record</h1>
                    <div class="card-body">
                        <form method="post" asp-action="Create">
                            <div class="form-group">
                                <label asp-for="FirstName"></label>
                                <input type="text" asp-for="FirstName" class="form-control" placeholder="Enter employee name" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div><br />
                            <div class="form-group">
                                <label asp-for="Address"></label>
                                <input type="text" asp-for="Address" class="form-control" placeholder="Enter employee salary" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div><br />
                            <div class="form-group">
                                <label asp-for="Country"></label>
                                <input type="text" asp-for="Country" class="form-control" placeholder="Enter employee state" />
                                <span asp-validation-for="Country" class="text-danger"></span>
                            </div><br />
                            <div class="form-group">
                                <label asp-for="City"></label>
                                <input type="text" asp-for="City" class="form-control" placeholder="Enter employee city" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Phoneno"></label>
                                <input type="text" asp-for="Phoneno" class="form-control" placeholder="Enter employee city" />
                                <span asp-validation-for="Phoneno" class="text-danger"></span>
                            </div><br />
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input type="text" asp-for="Email" class="form-control" placeholder="Enter employee city" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div><br />
                            <div class="form-group">
                                <label asp-for="Pincode"></label>
                                <input type="text" asp-for="Pincode" class="form-control" placeholder="Enter employee city"/>
                                <span asp-validation-for="Pincode" class="text-danger"></span>
                            </div>
                            <br />
                            <div>
                                <input type="submit" value="submit" class="btn btn-sm btn-success float-end"/>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>