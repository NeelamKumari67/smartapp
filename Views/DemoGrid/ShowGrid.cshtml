
@model List<CrudAppliction.Models.CustomerTB>
@{
    Layout = "~/Views/Shared/Navbar_Layout.cshtml";
}

<div class="container">
    <button onclick="ExportToPDF();" class="btn btn-danger" value="PDF">
        <i class="far fa-file-pdf" style="color: white;"></i> PDF
    </button>
    <a class="fa-sharp fa-solid fa-file-excel btn btn-success" style="color:aquamarine;" asp-controller="Excel" asp-action="ExportToExcel"> exportexcel </a>
    <a class="fa-sharp fa-solid fa-file-excel btn btn-warning" style="color:beige;" asp-controller="DemoGrid" asp-action="ImportExcelFile"> ImportExcel</a>
    <a class=" fa-solid fa-user btn btn-sm btn-success" id="demo"> </a>
    <a class="fa-solid fa-pen-to-square btn btn-sm btn-primary" onclick="Edit()"></a>

    <div style="width:100%; margin:0 auto;">
        <br />
        <table id="dataTableData" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>CustomerID</th>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>Address</th>
                    <th>Country</th>
                    <th>City</th>
                    <th>State</th>
                    <th>PhoneNumber</th>
                    <th>Email</th>
                    <th>Pincode</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
<div class="modal fade modal " id="demoModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class=" text-info modal-title" id="employeeheading">Add Customer</h1>
                <a class="btn btn-danger" asp-action="ShowGrid">&times;</a>
            </div>
            <div class="modal-body">
                <form method="post" id="demo">

                    <div class=" form-group">
                        <div class="row">
                            <div class="col-25">
                                <label><b>CustomerId : </b></label>
                            </div>
                            <div class="col-75">
                                <input type="text" class="form-control" id="customerId" disabled="disabled" />
                            </div>
                            <div class="col-25">
                                <label><b>FirstName : </b></label>
                            </div>
                            <div class="col-75">
                                <input type="text" placeholder="Enter firstName" class="form-control" id="fname" name="FirstName" autocomplete="off" />
                                <span id="firstname" class="text-danger"></span>
                            </div>
                        </div>
                    </div><br />
                    <div class=" form-group">
                        <div class="row">
                            <div class="col-25">
                                <label><b>LastName : </b> </label>
                            </div>
                            <div class="col-75">
                                <input type="text" placeholder="Enter lastName" class="form-control" id="lname" name="LastName" />
                                <span id="lastname" class="text-danger"></span>
                            </div>
                        </div>
                    </div><br />
                    <div class=" form-group">
                        <div class="row">
                            <div class="col-25">
                                <label><b>Address : </b> </label>
                            </div>
                            <div class="col-75">
                                <input type="text" placeholder="Enter address" class="form-control" id="address" name="Address" />
                                <span id="emailid" class="text-danger"></span>
                            </div>
                        </div>
                    </div><br />
                    <div class=" form-group">
                        <div class="row">
                            <div class="col-25">
                                <label><b>Country : </b> </label>
                            </div>
                            <div class="col-75">
                                <input type="text" placeholder="Enter country" class="form-control" id="country" name="Country" />
                            </div>
                        </div>
                    </div><br />
                    <div class=" form-group">
                        <div class="row">
                            <div class="col-25">
                                <label><b>PhoneNumber:</b></label>
                            </div>

                            <div class="col-75">
                                <input type="text" placeholder="Enter PhoneNumber" class="form-control" id="pnumber" name="Phoneno" />
                                <span id="pnumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div><br />
                    <div class=" form-group">
                        <div class="row">
                            <div class="col-25">
                                <label><b>State :</b> </label>
                            </div>

                            <div class="col-75">
                                <input type="text" placeholder="Enter state" class="form-control" id="state" name="State" />
                                <span id="state" class="text-danger"></span>
                            </div>
                        </div>
                    </div><br />
                    <div class=" form-group">
                        <div class="row">
                            <div class="col-25">
                                <label><b>City : </b></label>
                            </div>

                            <div class="col-75">
                                <input type="text" placeholder="Enter city" class="form-control" id="city" name="City" />
                                <span id="cty" class="text-danger"></span>
                            </div>

                        </div>
                    </div><br />
                    <div class=" form-group">
                        <div class="row">
                            <div class="col-25">
                                <label><b>Email : </b></label>
                            </div>

                            <div class="col-75">
                                <input type="text" placeholder="Enter email" class="form-control" id="email" name="Email" />
                                <span id="email" class="text-danger"></span>
                            </div>
                        </div>
                    </div><br />
                    <div class=" form-group">
                        <div class="row">
                            <div class="col-25">
                                <label><b>Pincode : </b></label>
                            </div>
                            <div class="col-75">
                                <input type="text" placeholder="Enter pincode" class="form-control" id="pincode" name="Pincode" />
                                <span id="pincod" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-success" onclick="AddEmployee();" id="AddEmployee">Submit</button>
                <button class="btn btn-warning" onclick="Update();" id="btnUpdate">Update</button>
                <a class="btn btn-danger" asp-action="ShowGrid">Close</a>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/java.js"></script>
    <link href="~/css/custom.css" rel="stylesheet" />
    <link href="~/datatables/datatables.css" rel="stylesheet" />
    <link href="~/datatables/datatables.min.css" rel="stylesheet" />
    <script src="~/datatables/datatables.js"></script>
    <script src="~/datatables/datatables.min.js"></script>
   <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> 
   <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> 
}