@model CrudAppliction.Models.CustomerTB
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card-header">
                <h1 class="text-warning text-center">Edit Employee Record</h1>

                <div class="card-body">
                    <form method="post" asp-action="Edit">
                        <div class="form-group">
                            <label asp-for="FirstName"></label>
                            <input type="hidden" asp-for="CustomerID" />
                            <input type="text" asp-for="FirstName" class="form-control" placeholder="Enter employee name" /><br />
                        </div>
                        <div class="form-group">
                            <label asp-for="Address"></label>
                            <input type="text" asp-for="Address" class="form-control" placeholder="Enter employee salary" /><br />
                        </div>
                        <div class="form-group">
                            <label asp-for="Country"></label>
                            <input type="text" asp-for="Country" class="form-control" placeholder="Enter employee state" /><br />
                        </div>
                        <div class="form-group">
                            <label asp-for="City"></label>
                            <input type="text" asp-for="City" class="form-control" placeholder="Enter employee city" /><br />
                        </div>
                        <div class="form-group">
                            <label asp-for="Phoneno"></label>
                            <input type="text" asp-for="Phoneno" class="form-control" placeholder="Enter employee city" /><br />
                        </div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input type="text" asp-for="Email" class="form-control" placeholder="Enter employee city" /><br />
                        </div>
                        <div class="form-group">
                            <label asp-for="Pincode"></label>
                            <input type="text" asp-for="Pincode" class="form-control" placeholder="Enter employee city" /><br />
                        </div>
                        <div>
                            <input type="submit" value="submit" class="btn btn-sm btn-warning float-end"/>
                        </div>
                    </form>
                </div>
            </div>

        </div>

    </div>

</div>
